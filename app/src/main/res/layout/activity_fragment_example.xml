<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.carolynhemmings.fragmentexample.FragmentExampleActivity"
    android:background="#96ece1">


    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.carolynhemmings.fragmentexample.ToolbarFragment"
        android:id="@+id/fragment"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/toolbar_fragment"/>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.carolynhemmings.fragmentexample.TextFragment"
        android:id="@+id/text_fragment"
        android:layout_centerVertical="true"
        android:layout_below="@+id/fragment"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/text_fragment"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fragment One"
        android:id="@+id/textTitle"
        android:textSize="22sp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/text_fragment"
        android:layout_alignEnd="@+id/text_fragment"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Text and Increase or Decrease its Size"
        android:id="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/text_fragment"
        android:src="@drawable/sunshine_logo_full"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

</RelativeLayout>
